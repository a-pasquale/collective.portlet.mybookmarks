<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.portlet.mybookmarks">
      	
<body>
	<metal:block fill-slot="top_slot"
               tal:define="dummy python:request.set('disable_border',1)" />
    <div tal:replace="structure provider:plone.contentmenu" />
	<div metal:fill-slot="main">
        <tal:main-macro metal:define-macro="main"
						tal:define="options python:options.get('args')">
        
		<h1 class="documentFirstHeading" i18n:translate="mybookmarks_external_header">
            Insert an external link
        </h1>
		<tal:response tal:condition="python:options and options[0].has_key('error_message')">
			
			<dl class=""
				tal:define="message python:options[0].get('error_message','')"
				tal:condition="message"
				tal:attributes="class string:portalMessage ${message/type}">
                <dt i18n:translate="" tal:content="message/type">
                    
                </dt>
                <dd tal:content="message/message"></dd>
            </dl>
		</tal:response>
        <div>
			<form method="POST"
	            action="">
	            	
		        <div class="formControls"
					 tal:define="errors python:options and options[0].get('errors',{})">
				  
				  <input type="hidden" name="form.submitted" value="1" />
				  
				  <div class="field"
				  	   tal:define="error errors/external_title | nothing;"
					   tal:attributes="class python:error and 'field error' or 'field'">
		                <label for="external_title" i18n:translate="mybookmarks_external_title">Title</label>
						<span class="fieldRequired" title="Required"
				      		  i18n:attributes="title"
				      		  i18n:translate="label_required">(Required)</span>
		                <div class="formHelp" i18n:translate="mybookmarks_external_title_help">
		                	Insert the link title.
		                </div>
		                <input type="text"
		                       id="external_title"
		                       name="external_title"
		                       size="25"
		                       />
		          </div>
				  <div class="field"
				  	   tal:define="error errors/external_url | nothing;"
					   tal:attributes="class python:error and 'field error' or 'field'">
		                <label for="external_url" i18n:translate="mybookmarks_external_url">Url</label>
						<span class="fieldRequired" title="Required"
				      		  i18n:attributes="title"
				      		  i18n:translate="label_required">(Required)</span>
		                <div class="formHelp" i18n:translate="mybookmarks_external_url_help">
		                	Insert the link url.
		                </div>
		                <input type="text"
		                       id="external_url"
		                       name="external_url"
		                       size="25"
		                       />
		          </div>
				  
				  <input class="context"
				         type="submit"
		                 value="Add"
		                 name="form.button.Add"
						 i18n:attributes="value;"
		                 />
						 
				  <input class="standalone"
				         type="submit"
		                 value="Cancel"
		                 name="form.button.Cancel"
						 i18n:attributes="value;"
		                 />
						 
		        </div>
	
	        </form>
        </div>
			
        </tal:main-macro>
    </div>
</body>
</html>